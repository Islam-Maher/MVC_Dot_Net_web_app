@model List<Category>
@section title{
	<h2>categories</h2>
}

@if (Model != null && Model.Count()>0){
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Description
				</th>
				<th>
				</th>
				<th>
				</th>
			</tr>
		</thead>
		<tbody>
			
			@foreach( var category in Model)
			{
			<tr>
				<td>
					@category.CategoryName
				</td>
				<td>
					@category.CategoryDescription
				</td>
				<td>
					@* if you didn't use the helper tages '<a href="@($"/categories/edit/{category.CategoryId}") class="btn btn-link" >Edit</>*@

					<a asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId" class="btn btn-link" >Edit</a>

						<a asp-controller="categories" asp-action="deletecategory" onclick="deleteCategory()" asp-route-categoryId="@category.CategoryId" class="btn btn-link">Delete</a>

				</td>
			</tr>
			}
			
		</tbody>

	</table>
	<br>
	<a asp-controller="categories" asp-action="add" class="btn btn-primary">Add category</a>
	
}

@section Scripts{
	<script>
		function deleteCategory() {
			return confirm("Are you sure that you want to delete this category ?")
		}
	</script>
}